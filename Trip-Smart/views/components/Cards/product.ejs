<div class="card rounded-2 shadow-sm popular">
    <img
      src="<%= val.image %>"
      class="card-img-top img-fluid"
      alt="image"
    />
    <div class="card-body">
      <p class="card-text">
        <i class="bi bi-geo-alt"></i>
        <span class="text"><%= val.location %></span>
      </p>
      
      <h5 class="card-title"><%= val.title %></h5>
      
      <p class="reviwe">
        <span><i class="bi bi-star-fill me-1"></i></span>
        <span><%= val.rating %></span>
        <span>(<%= val.reviews %> reviews)</span>
      </p>
      
      <% val.category.forEach(function(cat) { %>
        <span class="<%= cat.replace(/ .*/, '') %> badge"><%= cat %></span>
      <% }); %>
    </div>
  
    <div class="card-footer py-4">
      <% if (val.afterDiscount) { %>
        <p class="text-decoration-line-through">$<%= val.price.toFixed(2) %></p>
      <% } %>
      
      <div class="d-flex justify-content-between mt-3">
        <p>
          From <b>$<%= (val.afterDiscount ? val.afterDiscount : val.price).toFixed(2) %></b>
        </p>
        <p>
          <i class="bi bi-clock"></i> <%= val.days %>
        </p>
      </div>
    </div>
  </div>