<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
  <div class="container">
    <% if (errorMessage) { %>
      <div class="ui error message"><%= errorMessage %></div>
    <% } %>
    <form action="/users/register" method="POST">
      <h1>Sign Up</h1>
      <div class="field">
        <label>Username</label>
        <input type="text" name="username" value="<%= formValues.username || '' %>" placeholder="Username" required>
        <% if (formErrors.username) { %>
          <p><%= formErrors.username %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Email</label>
        <input type="email" name="email" value="<%= formValues.email || '' %>" placeholder="Email" required>
        <% if (formErrors.email) { %>
          <p><%= formErrors.email %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password" required>
        <% if (formErrors.password) { %>
          <p><%= formErrors.password %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
        <% if (formErrors.confirmPassword) { %>
          <p><%= formErrors.confirmPassword %></p>
        <% } %>
      </div>
      <button type="submit" class="ui button blue">Sign Up</button>
    </form>
    <div class="text">
      Already have an account? <a href="/users/login">Login</a>
    </div>
  </div>
</body>
</html>
