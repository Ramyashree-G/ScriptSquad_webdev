<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/signup.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <title>Sign Up</title>
</head>
<body>
  <!-- Dark Mode Toggle -->
  <div class="theme-toggle">
    <button id="theme-toggle-button" class="theme-button">
      <i id="theme-icon" class="ri-moon-line"></i> Toggle Dark Mode
    </button>
  </div>

  <!-- Signup Form -->
  <div class="container">
    <% if (errorMessage) { %>
      <div class="ui error message">
        <%= errorMessage %>
      </div>
    <% } %>
    <form action="/users/register" method="POST">
      <h1>Sign Up</h1>
      <div class="field">
        <label>Username</label>
        <input type="text" name="username" placeholder="Username" value="<%= formValues.username || '' %>" required>
        <% if (formErrors.username) { %>
          <p class="error"><%= formErrors.username %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Email</label>
        <input type="email" name="email" placeholder="Email" value="<%= formValues.email || '' %>" required>
        <% if (formErrors.email) { %>
          <p class="error"><%= formErrors.email %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password" required>
        <% if (formErrors.password) { %>
          <p class="error"><%= formErrors.password %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
        <% if (formErrors.confirmPassword) { %>
          <p class="error"><%= formErrors.confirmPassword %></p>
        <% } %>
      </div>
      <button type="submit" class="ui button blue">Sign Up</button>
    </form>
    <div class="text">
      Already have an account? <a href="/users/login">Login</a>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
