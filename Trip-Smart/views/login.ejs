<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/signup.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
  <title>Login</title>
</head>
<body>
  <!-- Dark Mode Toggle -->
  <div class="theme-toggle">
    <button id="theme-toggle-button" class="theme-button">
      <i id="theme-icon" class="ri-moon-line"></i> Toggle Dark Mode
    </button>
  </div>

  <!-- Login Form -->
  <div class="container">
    <% if (errorMessage) { %>
      <div class="ui error message"><%= errorMessage %></div>
    <% } %>
    <form action="/users/login" method="POST">
      <h1>Login</h1>
      <div class="field">
        <label>Username</label>
        <input type="text" name="username" placeholder="Username" required>
        <% if (formErrors.username) { %>
          <p><%= formErrors.username %></p>
        <% } %>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password" required>
        <% if (formErrors.password) { %>
          <p><%= formErrors.password %></p>
        <% } %>
      </div>
      <button type="submit" class="ui button blue">Login</button>
    </form>
    <div class="text">
      Don't have an account? <a href="/users/signup">Sign Up</a>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
